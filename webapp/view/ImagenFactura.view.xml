<mvc:View
	controllerName="neo.tgs.controller.ImagenFactura"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form">
	<Page class="sapUiResponsiveContentPadding" id="PageImagenFactura">
		<customHeader>
			<Bar>
				<contentLeft>
					<Title text="Imagen de Factura" titleStyle="H2"/>
				</contentLeft>
			</Bar>
		</customHeader>
		<subHeader>
			<OverflowToolbar>
				<Breadcrumbs currentLocationText="Imagen de Factura" separatorStyle="GreaterThan">
					<Link press="onPress" text="Inicio"/>
					<Link press="onPress" text="Monitor"/>
				</Breadcrumbs>
			</OverflowToolbar>
		</subHeader>
		<content>
			<VBox>
				<form:SimpleForm id="SimpleFormToolbar"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="4"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false"
					ariaLabelledBy="Title1" >
					<form:toolbar>
						<Toolbar id="TB1">
							<Title id="Title1" text="Parámetros de selección"/>
						</Toolbar>
					</form:toolbar>
					<form:content >
						<Label text="N° de DP (Document Process)" />
						<Input id="inpDP" required="true" change="onChange" type="Number" value="{path: 'Login>/DP', type: 'sap.ui.model.type.String', constraints: {minLength: 1, maxLength: 10}}" placeholder="Ej: 2394" />
					</form:content>
				</form:SimpleForm>
				<VBox id="VBoxBuscar" alignItems="Center">
					<items>
						<Button type="Emphasized" icon="sap-icon://search" text="Buscar" press="onPressBuscarPDF" />
					</items>
				</VBox>
				<PDFViewer visible="false" source="{Login>/xStringPDF}" id="PDFViewer" showDownloadButton="false" height="800px" title="Documento PDF">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</PDFViewer>
			</VBox>
		</content>
	</Page>
</mvc:View>