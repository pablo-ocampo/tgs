<mvc:View
	controllerName="neo.tgs.controller.MonitorFacturas"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Title text="Monitor de facturas" titleStyle="H2"/>
				</contentLeft>
			</Bar>
		</customHeader>
		<subHeader>
			<OverflowToolbar>
				<Breadcrumbs currentLocationText="Monitor de facturas" separatorStyle="GreaterThan">
					<Link press="onPress" text="Inicio"/>
					<Link press="onPress" text="Monitor"/>
				</Breadcrumbs>
			</OverflowToolbar>
		</subHeader>
		<content>
			<MessageStrip
				text="Buscar por rango de fechas o por número de factura"
				type="Information"
				showIcon="true"
				customIcon="sap-icon://appointment-2"
				class="sapUiMediumMargin">
			</MessageStrip>
			<form:SimpleForm id="SimpleFormToolbar"
			editable="true"
			class="sapUiResponsiveContentPadding sapUiMediumMargin"
			layout="ResponsiveGridLayout"
			labelSpanXL="2"
			labelSpanL="2"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false"
			ariaLabelledBy="Title1" >
			<form:toolbar>
				<Toolbar id="TB1">
					<Title id="Title1" text="Parámetros de selección"/>
				</Toolbar>
			</form:toolbar>
				<form:content >
					<Label text="Sociedad" />
					<Input id="inpSociedad" value="{SupplierName}" />
					<Label text="Factura" />
					<Input id="inpFactura" value="{SupplierName}" />
					<Label text="Desde / Hasta" />
					<Input id="inpDesde" value="{SupplierName}">
					</Input>
					<Input id="inpHasta" value="{SupplierName}" >
					</Input>
					<Label text="CUIT" />
					<Input id="inpCuit" value="{SupplierName}" />
					<Label text="Zona de carga" />
					<Input id="inpZona" value="{SupplierName}" />
					<Label text="Estado" />
					
					<Select id="inpEstado" selectedKey="Todas">
						<items>
							<core:Item text="Todas" key="Todas"/>
							<core:Item text="Cargadas" key="Cargadas"/>
							<core:Item text="Procesadas" key="Procesadas"/>
							<core:Item text="Pagadas" key="Pagadas"/>
							<core:Item text="Rechazadas" key="Rechazadas"/>
						</items>
					</Select>
				</form:content>
			</form:SimpleForm>
			<Text text="Un simple texto que indica que estás en el monitor de facturas"/>
		</content>
	</Page>
</mvc:View>