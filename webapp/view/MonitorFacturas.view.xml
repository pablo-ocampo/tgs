						<NumericContent value="234" icon="sap-icon://timesheet" />
					</TileContent>
				</GenericTile>
				<GenericTile class="tileLayout cardPagada sapUiSmallMargin" sizeBehavior="Small" tooltip="Filtrar pagadas" header="Pagadas" press="onPressCard">
					<TileContent footer="Filtrar">
						<NumericContent value="234" valueColor="Good" icon="sap-icon://paid-leave"/>
					</TileContent>
				</GenericTile>
				<GenericTile class="tileLayout cardRechazada sapUiSmallMargin" sizeBehavior="Small" tooltip="Filtrar rechazadas" header="Rechazadas" press="onPressCard">
