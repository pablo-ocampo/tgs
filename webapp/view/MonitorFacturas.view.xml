<mvc:View
	controllerName="neo.tgs.controller.MonitorFacturas"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Title text="Monitor de facturas" titleStyle="H2"/>
				</contentLeft>
			</Bar>
		</customHeader>
		<subHeader>
			<OverflowToolbar>
				<Breadcrumbs currentLocationText="Monitor de facturas" separatorStyle="GreaterThan">
					<Link press="onPress" text="Inicio"/>
					<Link press="onPress" text="Monitor"/>
				</Breadcrumbs>
			</OverflowToolbar>
		</subHeader>
		<content>
			<MessageStrip
				text="Buscar por rango de fechas o por número de factura"
				type="Information"
				showIcon="true"
				customIcon="sap-icon://appointment-2"
				class="sapUiMediumMargin">
			</MessageStrip>
			<form:SimpleForm id="SimpleFormToolbar"
			editable="true"
			class="sapUiResponsiveContentPadding"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false"
			ariaLabelledBy="Title1" >
			<form:toolbar>
				<Toolbar id="TB1">
					<Title id="Title1" text="Parámetros de selección"/>
				</Toolbar>
			</form:toolbar>
			<form:content >
				<Label text="Sociedad" />
				<Input value="{SupplierName}" />
				<Label text="Factura" />
				<Input value="{SupplierName}" />
				<Label text="Desde" />
				<Input value="{SupplierName}" />
				<Label text="Hasta" />
				<Input value="{SupplierName}" />
				<Label text="CUIT" />
				<Input value="{SupplierName}" />
				<Label text="Zona de carga" />
				<Input value="{SupplierName}" />
				<Label text="Estado" />
				<Input value="{SupplierName}" />
				
				<Select id="country" selectedKey="{Country}">
					<items>
						<core:Item text="England" key="England"/>
						<core:Item text="Germany" key="Germany"/>
						<core:Item text="USA" key="USA"/>
					</items>
				</Select>
			</form:content>
		</form:SimpleForm>
			<Text text="Un simple texto que indica que estás en el monitor de facturas"/>
		</content>
	</Page>
</mvc:View>