<mvc:View
	controllerName="neo.tgs.controller.MonitorFacturas"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<Page class="sapUiResponsiveContentPadding">
		<customHeader>
			<Bar>
				<contentLeft>
					<Title text="Monitor de facturas" titleStyle="H2"/>
				</contentLeft>
			</Bar>
		</customHeader>
		<subHeader>
			<OverflowToolbar>
				<Breadcrumbs currentLocationText="Monitor de facturas" separatorStyle="GreaterThan">
					<Link press="onPress" text="Inicio"/>
					<Link press="onPress" text="Monitor"/>
				</Breadcrumbs>
			</OverflowToolbar>
		</subHeader>
		<content>
			<MessageStrip
				text="Buscar por rango de fechas o por número de factura"
				type="Information"
				showIcon="true"
				customIcon="sap-icon://appointment-2"
				class="sapUiSmallMarginBottom">
			</MessageStrip>
			<VBox>
				<form:SimpleForm id="SimpleFormToolbar"
				editable="true"
				class="sapUiResponsiveContentPadding"
				layout="ResponsiveGridLayout"
				labelSpanXL="2"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="1"
				emptySpanL="1"
				emptySpanM="1"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false"
				ariaLabelledBy="Title1" >
				<form:toolbar>
					<Toolbar id="TB1">
						<Title id="Title1" text="Parámetros de selección"/>
					</Toolbar>
				</form:toolbar>
					<form:content >
						<Label text="Sociedad" />
						<Select id="inpSociedad" selectedKey="GDS">
							<items>
								<core:Item text="Trans. de Gas del Sur" key="GDS"/>
								<core:Item text="Telcosur" key="TELCOSUR"/>
							</items>
						</Select>
						<Label text="Factura" />
						<Input id="inpFactura" value="{SupplierName}" placeholder="Ej: 0001Z00000001" />
						<Label text="Desde / Hasta" />
						<DatePicker
							id="inpDesde"
							placeholder="dd/mm/aaaa"
							change="handleChange"/>
						<DatePicker
							id="inpHasta"
							placeholder="dd/mm/aaaa"
							change="handleChange"/>
						<Label text="CUIT" labelFor="hbox1"/>
						<HBox alignItems="Center" height="50px" renderType="Bare">
								<Input width="75%" class="sapUiMediumMarginEnd" id="inpCuit" value="{SupplierName}" placeholder="Ej: 30123456780" />
								<Text textAlign="End" maxLines="2" text="(Para proveedores del exterior o de varios puntos de venta ingrese el Código de Proveedor SAP)"/>
						</HBox>
						<Label text="Zona de carga" />
						<Select id="inpZona" selectedKey="NO">
							<items>
								<core:Item text="No asignar" key="NO"/>
								<core:Item text="Neuquen - Oeste" key="NQ-O"/>
								<core:Item text="Comodoro Rivadavia - Sur 1" key="CR-S1"/>
								<core:Item text="Rio Gallegos - Sur 2" key="RG-S2"/>
								<core:Item text="Capital Federal" key="CF"/>
								<core:Item text="Bahia Blanca - Cerri" key="BB-C"/>
							</items>
						</Select>
						<Label text="Estado" />
						
						<Select id="inpEstado" selectedKey="Todas">
							<items>
								<core:Item text="Todas" key="Todas"/>
								<core:Item text="Cargadas" key="Cargadas"/>
								<core:Item text="Procesadas" key="Procesadas"/>
								<core:Item text="Pagadas" key="Pagadas"/>
								<core:Item text="Rechazadas" key="Rechazadas"/>
							</items>
						</Select>
					</form:content>
				</form:SimpleForm>
				<VBox alignItems="Center">
					<items>
						<Button type="Emphasized" icon="sap-icon://search" text="Buscar" press="onPressBuscarFactura" />
					</items>
				</VBox>
			</VBox>
			<GenericTile class="sapUiTinyMargin tileLayout" header="Cargadas" subheader="Expenses" press="press" tooltip="asd">
				<TileContent footer="Filtrar">
					<NumericContent value="234" icon="sap-icon://line-charts" />
				</TileContent>
			</GenericTile>
			<GenericTile class="sapUiTinyMargin tileLayout" header="Cargadas" subheader="Expenses" press="press">
				<TileContent footer="Filtrar">
					<NumericContent value="234" icon="sap-icon://line-charts" />
				</TileContent>
			</GenericTile>
			<GenericTile class="sapUiTinyMargin tileLayout" header="Cargadas" subheader="Expenses" press="press">
				<TileContent footer="Filtrar">
					<NumericContent value="234" icon="sap-icon://line-charts" />
				</TileContent>
			</GenericTile>
			<GenericTile class="sapUiTinyMargin tileLayout" header="Cargadas" subheader="Expenses" press="press">
				<TileContent footer="Filtrar">
					<NumericContent value="234" icon="sap-icon://line-charts" />
				</TileContent>
			</GenericTile>
		</content>
	</Page>
</mvc:View>