				<VBox id="VBoxBuscar" alignItems="Center">
					<items>
						<Button type="Emphasized" icon="sap-icon://search" text="Buscar" press="onPressBuscarFactura" />
					</items>
				</VBox>
			</VBox>
			<HBox justifyContent="Center" visible="false" id="Cards" >
				<GenericTile class="tileLayout cardCargada sapUiSmallMargin" sizeBehavior="Small" tooltip="Filtrar cargadas" header="Cargadas" press="onPressCard">
					<TileContent footer="Filtrar">
						<NumericContent value="234" icon="sap-icon://pushpin-on" />
					</TileContent>
				</GenericTile>
				<GenericTile class="tileLayout cardProcesada sapUiSmallMargin" sizeBehavior="Small" tooltip="Filtrar procesadas" header="Procesadas" press="onPressCard">
