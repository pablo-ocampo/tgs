<mvc:View
	controllerName="neo.tgs.controller.IngresarFactura"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:semantic="sap.m.semantic"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<semantic:FullscreenPage
		title="Ingresar factura"
		class="sapUiResponsiveContentPadding">
	<!--<Page title="Ingresar factura" class="sapUiResponsiveContentPadding">-->
		<!--<headerContent>-->
		<!--	<Button icon="sap-icon://action" tooltip="Share" />-->
		<!--</headerContent>-->
		<semantic:subHeader>
			<OverflowToolbar>
				<Breadcrumbs currentLocationText="Ingresar factura" separatorStyle="GreaterThan">
					<Link press="onPress" text="Inicio"/>
				</Breadcrumbs>
			</OverflowToolbar>
		</semantic:subHeader>
		<!--<content>-->
		<semantic:content>
			<VBox>
				<form:SimpleForm id="SimpleFormToolbar"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="2"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="1"
				emptySpanL="1"
				emptySpanM="1"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false"
				ariaLabelledBy="Title1" >
				<form:toolbar>
					<Toolbar id="TB1">
						<Title id="Title1" text="Ingrese datos de la factura"/>
					</Toolbar>
				</form:toolbar>
					<form:content >
						<Label text="CUIT" labelFor="inpCuit"/>
						<Input width="75%" required="true" class="sapUiMediumMarginEnd" id="inpCuit" value="{CuitProv}" placeholder="Ej: 30123456780" />
						<Text textAlign="End" class="noPadding" maxLines="2" text="(Para proveedores del exterior o de varios puntos de venta ingrese el CÃ³digo de Proveedor SAP)"/>
						<Label text="Fecha de factura" />
						<DatePicker
							id="inpFecha"
							displayFormat="dd/MM/yyyy"
							valueFormat="yyyy-MM-dd"
							placeholder="dd/mm/aaaa"
							value="{FechaFac}"
							change="handleChangeDatePicker"/>
						<Label text="Orden de compra" />
						<Input id="inpOrdenCompra" value="{OrdenCom}" placeholder="Ej: 0123456789" />
						<Label text="Factura" />
						<Input id="inpFactura" value="{NumFac}" placeholder="Ej: 0001Z00000001" />
						<Label text="Importe - Moneda" />
						<Input value="{Importe}" id="inpImporte">
						</Input>
						<Input id="inpMoneda" value="{Moneda}" placeholder="ARS" >
							<layoutData>
								<l:GridData span="XL1 L1 M1 S2" />
							</layoutData>
						</Input>
						<Label text="Clase de documento" />
							<Select id="inpClaseDoc" selectedKey="NO">
								<items>
									<core:Item text="Factura" key="NO"/>
									<core:Item text="Orden de compra" key="NQ-O"/>
								</items>
							</Select>
					</form:content>
				</form:SimpleForm>
			</VBox>
		</semantic:content>
		<semantic:customFooterContent>
            <Button id="ingresarBtn" text="Ingresar" type="Accept" press="onSave"/>
            <Button id="cancelarBtn" text="Cancelar" type="Reject" press="onCancel"/>
		 </semantic:customFooterContent>
		<!--</content>-->
	</semantic:FullscreenPage>
	<!--</Page>-->
</mvc:View>