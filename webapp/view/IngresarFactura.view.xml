<mvc:View
	controllerName="neo.tgs.controller.IngresarFactura"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="Ingresar factura" class="sapUiResponsiveContentPadding">
		<headerContent>
			<Button icon="sap-icon://action" tooltip="Share" />
		</headerContent>
		<subHeader>
			<OverflowToolbar>
				<Breadcrumbs currentLocationText="Ingresar factura" separatorStyle="GreaterThan">
					<Link press="onPress" text="Inicio"/>
				</Breadcrumbs>
			</OverflowToolbar>
		</subHeader>
		<content>
			<VBox>
				<form:SimpleForm id="SimpleFormToolbar"
				editable="true"
				class="sapUiResponsiveContentPadding"
				layout="ResponsiveGridLayout"
				labelSpanXL="2"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="1"
				emptySpanL="1"
				emptySpanM="1"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false"
				ariaLabelledBy="Title1" >
				<form:toolbar>
					<Toolbar id="TB1">
						<Title id="Title1" text="Parámetros de selección"/>
					</Toolbar>
				</form:toolbar>
					<form:content >
						<Label text="CUIT" labelFor="inpCuit"/>
						<Input width="75%" required="true" class="sapUiMediumMarginEnd" id="inpCuit" value="{SupplierName}" placeholder="Ej: 30123456780" />
						<Text textAlign="End" class="noPadding" maxLines="2" text="(Para proveedores del exterior o de varios puntos de venta ingrese el Código de Proveedor SAP)"/>
						<Label text="Fecha de factura" />
						<DatePicker
							id="inpDesde"
							placeholder="dd/mm/aaaa"
							change="handleChange"/>
						<Label text="Orden de compra" />
						<Input id="inpOrdenCompra" placeholder="Ej: 0123456789" />
						<Label text="Factura" />
						<Input id="inpFactura" placeholder="Ej: 0001Z00000001" />
						<Label text="Importe - Moneda" />
						<Input id="inpImporte">
						</Input>
						<Input id="inpMoneda" placeholder="ARS" >
							<layoutData>
								<l:GridData span="XL1 L1 M1 S2" />
							</layoutData>
						</Input>
						<Label text="Clase de documento" />
							<Select id="inpClaseDoc" selectedKey="NO">
								<items>
									<core:Item text="Factura" key="NO"/>
									<core:Item text="Orden de compra" key="NQ-O"/>
								</items>
							</Select>
					</form:content>
				</form:SimpleForm>
				<VBox alignItems="Center" class="sapUiLargeMarginBottom">
					<items>
						<Button type="Emphasized" icon="sap-icon://create-form" text="Ingresar" press="onPressIngresarFactura" />
					</items>
				</VBox>
			</VBox>
		</content>
	</Page>
</mvc:View>