<mvc:View
	controllerName="neo.tgs.controller.Login"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards">
	
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Image src="./images/Entelgy_logo_negro.png" id="headerImg" class="marginLogoLogin" width="9.4rem"/>
					<ToolbarSeparator/>
					<Title text="PORTAL DE PROVEEDORES" level="H1" class="sapUiTinyMarginTop sapUiSmallMarginBegin"/>
				</contentLeft>
			</Bar>
		</customHeader>
		<content >
			<FlexBox
				alignItems="Center"
				justifyContent="Center">
				<items>
					<f:Card
						class="margenCardLogin"
						height="250px"
						width="300px">
						<f:header>
							<Bar>
								<contentMiddle>
									<Title text="{i18n>titulo_login}"/>
								</contentMiddle>
							</Bar>
						</f:header>
						<f:content>
							<VBox
							width="100%"
							class="sapUiSmallMargin sapUiResponsiveContentPadding"
							justifyContent="SpaceBetween">
								<Input id="usuario" placeholder="Usuario" value="{Login>/usuario}" />
								<Input id="contrasenia" type="Password" placeholder="ContraseÃ±a" value="{Login>/contrasenia}" />
								<HBox justifyContent="SpaceBetween" >
									<Link text="{i18n>olvidar_contrasenia}" class="margenLinkLogin" press="onOlvidarContraseniaPress"/>
									<Button id="entrar" text="Entrar" icon="sap-icon://visits" type="Emphasized" press="onPressLogin" />
								</HBox>	
							</VBox>
						</f:content>
					</f:Card>
				</items>
			</FlexBox>
		</content>
	</Page>
</mvc:View>