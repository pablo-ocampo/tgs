<mvc:View
	controllerName="neo.tgs.controller.SplitApp"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	xmlns:l="sap.ui.layout">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="sideNavigationToggleButton"
					icon="sap-icon://menu2"
					type="Transparent"
					press=".onSideNavButtonPress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
				<Image src="./images/Entelgy_logo_blanco.png" id="headerImg" width="7rem" press="onLogoPress"/>
				<ToolbarSeparator/>
				<Title text="PORTAL DE PROVEEDORES" level="H1" class="sapUiSmallMarginBegin"/>
				<ToolbarSpacer width="20px" />
				<tnt:ToolHeaderUtilitySeparator />
				<ToolbarSpacer>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px" />
					</layoutData>
				</ToolbarSpacer>
				<HBox alignItems="Center" id="boxMenu">
					
					<Avatar
							id="userAvatar"
							displaySize="XS"
							press="onUserMenuPress"
							initials="{Login>/inicial}"
							backgroundColor="Random"/>
					<MenuButton text="{Login>/usuario}" id="userMenu" class="sapUiTinyMarginEnd">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
						<menu>
							<Menu>
								<MenuItem text="Reclamos" icon="sap-icon://edit" />
								<MenuItem text="Datos propios" icon="sap-icon://save" />
								<MenuItem text="Cambio de contraseña" icon="sap-icon://open-folder" startsSection="true" />
								<MenuItem text="Cerrar sesión" icon="sap-icon://open-folder" startsSection="true" />
							</Menu>
						</menu>
					</MenuButton>
				</HBox>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="true"
				itemSelect=".onItemSelect">
				<tnt:NavigationList items="{path: 'menu>/navigation'}">
					<tnt:NavigationListItem
						text="{menu>title}"
						icon="{menu>icon}"
						enabled="{menu>enabled}"
						expanded="{menu>expanded}"
						items="{menu>items}"
						key="{menu>key}">
						<tnt:NavigationListItem
							text="{menu>title}"
							key="{menu>key}"
							enabled="{menu>enabled}" />
					</tnt:NavigationListItem>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
	<tnt:mainContents id="mainContents">
		<NavContainer id="NavContainer" >
		</NavContainer>
	</tnt:mainContents>
</tnt:ToolPage>
</mvc:View>